@using MediLab.Areas.Admin.ViewModels.Clinics;
@model UpdateClinicVM
@{
    ViewData["Title"] = "Update";
}
<style>
    .container-fluid {
        background-color: #e0e0e0; /* Arka plan rengi */
        padding-top: 4rem;
        padding-bottom: 4rem;
        padding-left: 4rem;
        padding-right: 4rem;
    }

    .bg-secondary {
        background-color: #6ea8e1; /* Arkaplan mavi rengi */
        color: #fff; /* Metin rengi */
    }

    .rounded {
        border-radius: 1rem;
    }

    .h-100 {
        height: 100%;
    }

    .p-4 {
        padding: 1rem;
    }

    form {
        margin-top: 2rem;
    }

    .form-floating {
        margin-bottom: 1rem;
    }

    .form-control {
        border-radius: 0.5rem;
    }

    label {
        font-weight: bold;
    }

    button[type="submit"] {
        background-color: #6ea8e1;
        color: #fff;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        cursor: pointer;
    }

        button[type="submit"]:hover {
            background-color: #5b93d0;
        }
</style>
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-secondary rounded h-100 p-4">
                <div asp-validation-summary="ModelOnly"></div>
                <form method="post" enctype="multipart/form-data">
                    <div class="form-floating mb-3">
                        <input asp-for="Name" class="form-control">
                        <label asp-for="Name"></label>
                        <span asp-validation-for="Name"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Description" class="form-control">
                        <label asp-for="Description"></label>
                        <span asp-validation-for="Description"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Adress" class="form-control">
                        <label asp-for="Adress"></label>
                        <span asp-validation-for="Adress"></span>
                    </div>
                    <div class=" mb-3">
                        <input asp-for="Photo" class="form-control">
                        <label asp-for="Photo"></label>
                        <span asp-validation-for="Photo"></span>
                    </div>
                    <button type="submit">Update</button>
                </form>
            </div>
        </div>
    </div>
</div>
